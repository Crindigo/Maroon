{% extends 'MaroonRPGBundle::layout_admin.html.twig' %}

{% block headline %}Races{% endblock %}

{% block body -%}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Statsinit</th>
                <td>{{ entity.statsInit }}</td>
            </tr>
            <tr>
                <th>Statsbonus</th>
                <td>{{ entity.statsBonus }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_race') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_race_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_race_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
