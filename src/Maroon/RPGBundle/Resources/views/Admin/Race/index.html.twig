{% extends 'MaroonRPGBundle::layout_admin.html.twig' %}

{% block headline %}Races{% endblock %}

{% block body -%}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Statsinit</th>
                <th>Statsbonus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_race_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.statsInit }}</td>
                <td>{{ entity.statsBonus }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_race_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_race_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_race_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
