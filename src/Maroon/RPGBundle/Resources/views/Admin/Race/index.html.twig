{% extends 'MaroonRPGBundle::layout_admin.html.twig' %}

{% block headline %}Races{% endblock %}

{% block body -%}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_race_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.description }}</td>
                <td>
                    <a class="btn" href="{{ path('admin_race_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_race_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
