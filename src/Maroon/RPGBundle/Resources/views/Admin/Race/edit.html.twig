{% extends 'MaroonRPGBundle::layout_admin.html.twig' %}

{% block headline %}Edit Race: <span id="race_name">{{ entity.name }}</span>{% endblock %}

{% block body -%}

    <form class="form-horizontal" action="{{ path('admin_race_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT"/>
        {{ form_row(edit_form.name, {'attr': {'data-bind': '#race_name'}}) }}
        {{ form_row(edit_form.description) }}
        {{ form_row(edit_form.selectableGenders) }}
        {{ form_row(edit_form.selectableJobs) }}

        <div class="control-group">
            <label class="control-label">Initial Stats</label>

            <div class="stats-add-on controls">
                {% for st in edit_form.statsInit[0:4] %}
                    {{ form_widget(st) }}
                    &nbsp;
                {% endfor %}
            </div>
        </div>

        <div class="control-group">
            <div class="stats-add-on controls">
                {% for st in edit_form.statsInit[4:4] %}
                    {{ form_widget(st) }}
                    &nbsp;
                {% endfor %}
            </div>
        </div>

        <div class="control-group">
            <div class="stats-add-on controls">
                {% for st in edit_form.statsInit[8:4] %}
                    {{ form_widget(st) }}
                    &nbsp;
                {% endfor %}
            </div>
        </div>


        <div class="control-group">
            <label class="control-label">Stats Per Level</label>

            <div class="stats-add-on controls">
                {% for st in edit_form.statsBonus[0:4] %}
                    {{ form_widget(st) }}
                    &nbsp;
                {% endfor %}
            </div>
        </div>

        <div class="control-group">
            <div class="stats-add-on controls">
                {% for st in edit_form.statsBonus[4:4] %}
                    {{ form_widget(st) }}
                    &nbsp;
                {% endfor %}
            </div>
        </div>

        <div class="control-group">
            <div class="stats-add-on controls">
                {% for st in edit_form.statsBonus[8:4] %}
                    {{ form_widget(st) }}
                    &nbsp;
                {% endfor %}
            </div>
        </div>

        {{ form_rest(edit_form) }}
        <div class="form-actions">
            <button class="btn btn-primary" type="submit">Edit</button>
            <a href="{{ path('admin_race') }}" class="btn btn-inverse pull-right">Back to List</a>
        </div>
    </form>

    <div class="alert alert-danger centered">
        <form class="form-delete" action="{{ path('admin_race_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE"/>
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete Race</button>
        </form>
    </div>

{% endblock %}
