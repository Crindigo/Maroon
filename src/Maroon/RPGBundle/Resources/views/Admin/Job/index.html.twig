{% extends 'MaroonRPGBundle::layout_admin.html.twig' %}
{% from '::macros.html.twig' import breadcrumbs %}

{% block title %}Jobs | {{ parent() }}{% endblock %}

{% block crumbs %}
{{ breadcrumbs({'admin_home': 'Admin Home', '': 'Jobs'}) }}
{% endblock %}

{% block headline %}Jobs{% endblock %}

{% block body -%}

    <p><a class="btn" href="{{ path('admin_job_new') }}"><i class="icon-plus"></i> Create New Job</a></p>

    <table class="table table-striped table-vert-centered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_job_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.description }}</td>
                <td>
                    <a class="btn" href="{{ path('admin_job_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
